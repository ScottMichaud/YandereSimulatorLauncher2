<UserControl x:Class="YandereSimulatorLauncher2.Controls.DownloadBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:YandereSimulatorLauncher2.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Border ClipToBounds="True">
            <Canvas>
                <Border x:Name="SlidingContainer" Width="508" Height="95" Background="#ff80d3" BorderThickness="1" BorderBrush="#95286d" CornerRadius="23" Canvas.Bottom="53" Canvas.Right="-520">
                    <Canvas>
                        <TextBlock x:Name="BarLabel" Canvas.Left="22" Canvas.Bottom="54" FontSize="24" FontFamily="{StaticResource LeagueGothic}" Foreground="White">

                        </TextBlock>
                        <Border x:Name="BarContainer" Width="464" Height="32" BorderThickness="1" BorderBrush="#95286d" Background="#ee63bb" Canvas.Bottom="18" Canvas.Left="22">
                            <Canvas x:Name="BarSegmentContainer">
                                
                            </Canvas>
                        </Border>
                    </Canvas>
                    
                    <Border.Effect>
                        <DropShadowEffect Color="Black" Opacity="0.5" Direction="300" BlurRadius="9" ShadowDepth="2"/>
                    </Border.Effect>
                </Border>
            </Canvas>
        </Border>
    </Grid>
</UserControl>
