<UserControl x:Class="YandereSimulatorLauncher2.Controls.UpdatePromptFlyin"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:YandereSimulatorLauncher2.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Border ClipToBounds="True">
            <Canvas>
                <Border x:Name="SlidingContainer" Width="600" Height="40" Background="#ff80d3" BorderThickness="1" BorderBrush="#95286d" Canvas.Bottom="-50" Canvas.Left="140">
                    <Canvas>
                        <TextBlock x:Name="UpdateLabel" Canvas.Left="22" Canvas.Bottom="4" FontSize="24" FontFamily="{StaticResource LeagueGothic}" Foreground="White">
                            Launcher update available...
                        </TextBlock>
                        <local:OtherHyperlinkFromText Canvas.Bottom="4" Canvas.Right="22" DisplayText="Download" LinkedUrl="https://yanderesimulator.com/download/"/>
                    </Canvas>
                </Border>
            </Canvas>
        </Border>
    </Grid>
</UserControl>
